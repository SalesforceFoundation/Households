<!-- We need jQuery - use CDNs to save user from re-downloading it if possible -->
<apex:includeScript value="https://ajax.googleapis.com/ajax/libs/jquery/1.7.0/jquery.min.js" />
<!-- We also need jQuery UI --> 
<apex:includeScript value="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js" />
<!-- We also need JSON2 -->
<apex:includeScript value="https://cdnjs.cloudflare.com/ajax/libs/json2/20110223/json2.js" />

<!-- get our jQuery UI theme -->
<apex:stylesheet value="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/themes/smoothness/jquery-ui.css" />

<!-- ensure the css overrides any salesforce css by loading it later -->
<link href="{!$Resource.ManageHouseholdcss}" type="text/css" rel="stylesheet" />

<!-- The below code needs VF merge values so has not been migrated to the static resource in {!$Resource.ManageHouseholdjs} -->
<!-- the values prefixed lbl need to be translated in custom labels / object / field labels -->
<script type="text/javascript" >
var gwManageHH = new Object();
gwManageHH.lblAdd = '{!$Label.Add}';
gwManageHH.lblExistingHH = '{!$Label.ExistingHousehold}';
gwManageHH.lblChangesNotSaved = '{!$Label.ChangesNotSaved}';
gwManageHH.lblContact = '{!$ObjectType.Contact.Label}';
gwManageHH.lblContactFirstName = '{!$ObjectType.Contact.Fields.FirstName.Label}';
gwManageHH.lblContactLastName = '{!$ObjectType.Contact.Fields.LastName.Label}';
gwManageHH.lblContactNameRqd = '{!$Label.ContactNameRqd}';
gwManageHH.lblContactLastNameRqd = '{!$Label.ContactLastNameRqd}';
gwManageHH.lblContactCreatedOnSave = '{!$Label.CreatedOnSave}';
gwManageHH.lblExcludeText = '{!$Label.ExcludeText}';
gwManageHH.lblExcludeName = '{!$ObjectType.npo02__Household__c.Fields.Name.Label}';
gwManageHH.lblExcludeFormal = '{!$ObjectType.npo02__Household__c.Fields.npo02__Formal_Greeting__c.Label}';
gwManageHH.lblExcludeInformal = '{!$ObjectType.npo02__Household__c.Fields.npo02__Informal_Greeting__c.Label}';
gwManageHH.lblAddAndRemove = '{!$Label.AddAndRemove}';
gwManageHH.lblAddAndMerge = '{!$Label.AddAndMerge}';
gwManageHH.lblSetAddress = '{!$Label.SetAddress}'; 
gwManageHH.lblCancel = '{!$Label.site.cancel}'; 

//these merge fields hold the user's state for use in remoting
gwManageHH.state = {!jsonState};
gwManageHH.jsonState = JSON.stringify(gwManageHH.state);
gwManageHH.originalState = JSON.stringify({!originalState});
</script>
<!-- Load custom JS after objects and labels have been initialised -->
<script type="text/javascript" src="{!$Resource.ManageHouseholdjs}" />

<div id="dialog-addmember" class="gwDialog gwHidden" title="{!$Label.AlreadyInHousehold}">
	<p><strong id="dialog-addmember-name" /> {!$Label.ContactAlreadyInHousehold}</p>
</div>
<div id="dialog-changeaddress" class="gwDialog gwHidden" title="{!$Label.ChangeAddress}">
	<div class="gwAccordion">
		<h3><a href="#">{!$Label.SelectExistingAddress}</a></h3>
		<div id="hhExistingAddress" />
		<h3><a href="#">{!$Label.EnterNewAddress}</a></h3>
		<div id="hhNewAddress">
			<div class="gwField">
				<label for="hhAddressStreet" class="gwField-label">{!$ObjectType.npo02__Household__c.Fields.npo02__MailingStreet__c.Label}</label>
				<textarea class="gwField-input" id="hhAddressStreet" name="hhAddressStreet" />
			</div>
			<div class="gwField">
				<label for="hhAddressCity" class="gwField-label">{!$ObjectType.npo02__Household__c.Fields.npo02__MailingCity__c.Label}</label>
				<input type="text" class="gwField-input" id="hhAddressCity" name="hhAddressCity" />
			</div>
			<div class="gwField">
				<label for="hhAddressState" class="gwField-label">{!$ObjectType.npo02__Household__c.Fields.npo02__MailingState__c.Label}</label>
				<input type="text" class="gwField-input" id="hhAddressState" name="hhAddressState" />
			</div>
			<div class="gwField">
				<label for="hhAddressPostalCode" class="gwField-label">{!$ObjectType.npo02__Household__c.Fields.npo02__MailingPostalCode__c.Label}</label>
				<input type="text" class="gwField-input" id="hhAddressPostalCode" name="hhAddressPostalCode" />
			</div>
			<div class="gwField">
				<label for="hhAddressCountry" class="gwField-label">{!$ObjectType.npo02__Household__c.Fields.npo02__MailingCountry__c.Label}</label>
				<input type="text" class="gwField-input" id="hhAddressCountry" name="hhAddressCountry" />
			</div>
		</div>
	</div>
</div>

<apex:sectionHeader title="{!$Label.ManageHousehold}" />



<div class="gwNotifications gwHidden"> </div>



<div class="gwSection">
<div class="gwSection-header">
    <h2 class="gwSection-title">{!$Label.HouseholdMembers}</h2>
    <div class="hhSearch">
    	<label for="hhSearch-input">{!$Label.AddHouseholdMembers}</label>
    	<input id="hhSearch-input" type="text" title="{!$Label.FindContactByName}" class="gwTitleLabel hhSearch-input" name="hhSearch-input" />
    	<button class="gwButton hhAddNew">{!$Label.NewContact}</button>
    </div>
    <div class="gwClear"></div>
</div>
<div class="gwSection-content">
	<div class="hhMembers">
		<div class="hhMembers-none">{!$Label.NoContacts}</div>
	</div>
	<div class="hhAddress gwHidden">
		<h3 class="hhAddress-title">{!$Label.HouseholdAddress}</h3>
		<div class="hhAddress-content">
			<div class="hhAddress-details">
				<span class="hhAddress-address"></span>
				<button class="gwButton hhAddress-change">{!$Label.Change}</button>
			</div>
			<div class="hhAddress-help gwDiscreet">
				<input type="checkbox" class="gwPreventUI" id="hhCopyAddressToContacts" name="hhCopyAddressToContacts" />
				<label for="hhCopyAddressToContacts">{!$Label.AddressToAllMembers}</label>
			</div>
		</div>
	</div>
</div>
</div>
<div id="hhNaming" class="gwSection">
	<div class="gwSection-content">
		<div class="gwField">
			<label for="hhName" class="gwField-label">{!$ObjectType.npo02__Household__c.Fields.Name.Label}</label>
			<input type="text" class="gwField-input" id="hhName" name="hhName" />
			<input type="checkbox" class="gwPreventUI" id="hhAutoName" name="hhAutoName" /><label for="hhAutoName">{!$Label.AutoName}</label>
		</div>
		<div class="gwField">
			<label for="hhFormalGreeting" class="gwField-label">{!$ObjectType.npo02__Household__c.Fields.npo02__Formal_Greeting__c.Label}</label>
			<input type="text" class="gwField-input" id="hhFormalGreeting" name="hhFormalGreeting" />
			<input type="checkbox" class="gwPreventUI" id="hhAutoFormalGreeting" name="hhAutoFormalGreeting" /><label for="hhAutoFormalGreeting">{!$Label.AutoFormalGreeting}</label>
		</div>
		<div class="gwField">
			<label for="hhInformalGreeting" class="gwField-label">{!$ObjectType.npo02__Household__c.Fields.npo02__Informal_Greeting__c.Label}</label>
			<input type="text" class="gwField-input" id="hhInformalGreeting" name="hhInformalGreeting" />
			<input type="checkbox" class="gwPreventUI" id="hhAutoInformalGreeting" name="hhAutoInformalGreeting" /><label for="hhAutoInformalGreeting">{!$Label.AutoInformalGreeting}</label>
		</div>
	</div>
</div>

<apex:form >
<!-- inputText so that the javascript can write back to the multiselect field -->
<apex:inputText value="{!hh.SYSTEM_CUSTOM_NAMING__c}" styleClass="gwHidden sfField sfField-SYSTEM_CUSTOM_NAMING__c" />
<apex:inputField value="{!hh.Name}" styleClass="gwHidden sfField sfField-Name" />
<apex:inputField value="{!hh.Formal_Greeting__c}" styleClass="gwHidden sfField sfField-Formal_Greeting__c" />
<apex:inputField value="{!hh.Informal_Greeting__c}" styleClass="gwHidden sfField sfField-Informal_Greeting__c" />
<!-- Mailing Street on contacts is multi-line, but isn't in NPSP - using inputTextArea instead of inputField so that the CRLF is replaced by a space instead of deleted - still not perfect! -->
<apex:inputTextarea value="{!hh.MailingStreet__c}" styleClass="gwHidden sfField sfField-MailingStreet__c" />
<apex:inputField value="{!hh.MailingCity__c}" styleClass="gwHidden sfField sfField-MailingCity__c" />
<apex:inputField value="{!hh.MailingState__c}" styleClass="gwHidden sfField sfField-MailingState__c" />
<apex:inputField value="{!hh.MailingPostalCode__c}" styleClass="gwHidden sfField sfField-MailingPostalCode__c" />
<apex:inputField value="{!hh.MailingCountry__c}" styleClass="gwHidden sfField sfField-MailingCountry__c" />

<apex:pageBlock id="hhDetails" rendered="{!hh.id!=null}" title="{!$Label.HouseholdDetails}">

<apex:pageBlockSection columns="2">

		
		<apex:repeat value="{!$ObjectType.Household__c.FieldSets.Manage_Household_Custom}" var="f">
			<apex:inputField rendered="{!NOT(CONTAINS('npo02__Addressee__c,npo02__Always_Anonymous__c,npo02__AverageAmount__c,npo02__FirstCloseDate__c,npo02__Formal_Greeting__c,npo02__Formula_MailingAddress__c,npo02__Household_ID__c,Informal_Greeting__c,npo02__LargestAmount__c,npo02__LastCloseDate__c,npo02__LastMembershipAmount__c,npo02__LastMembershipDate__c,npo02__LastMembershipLevel__c,npo02__LastMembershipOrigin__c,npo02__LastOppAmount__c,npo02__MailingCity__c,npo02__MailingCountry__c,npo02__MailingPostalCode__c,npo02__MailingState__c,npo02__MailingStreet__c,npo02__MembershipEndDate__c,npo02__MembershipJoinDate__c,npo02__Membership_Span__c,npo02__Membership_Status__c,npo02__NumberOfClosedOpps__c,npo02__NumberOfMembershipOpps__c,npo02__OppAmount2YearsAgo__c,npo02__OppAmountLastNDays__c,npo02__OppAmountLastYear__c,npo02__OppAmountThisYear__c,npo02__OppsClosed2YearsAgo__c,npo02__OppsClosedLastNDays__c,npo02__OppsClosedLastYear__c,npo02__OppsClosedThisYear__c,npo02__SYSTEM_CUSTOM_NAMING__c,npo02__SmallestAmount__c,npo02__TotalMembershipOppAmount__c,npo02__TotalOppAmount__c', f.FieldPath))}"
				value="{!hh[f]}" styleClass="sfField sfField-{!f.FieldPath}"/>

			<apex:outputField rendered="{!CONTAINS('npo02__Addressee__c,npo02__Always_Anonymous__c,npo02__AverageAmount__c,npo02__FirstCloseDate__c,npo02__Formal_Greeting__c,npo02__Formula_MailingAddress__c,npo02__Household_ID__c,Informal_Greeting__c,npo02__LargestAmount__c,npo02__LastCloseDate__c,npo02__LastMembershipAmount__c,npo02__LastMembershipDate__c,npo02__LastMembershipLevel__c,npo02__LastMembershipOrigin__c,npo02__LastOppAmount__c,npo02__MailingCity__c,npo02__MailingCountry__c,npo02__MailingPostalCode__c,npo02__MailingState__c,npo02__MailingStreet__c,npo02__MembershipEndDate__c,npo02__MembershipJoinDate__c,npo02__Membership_Span__c,npo02__Membership_Status__c,npo02__NumberOfClosedOpps__c,npo02__NumberOfMembershipOpps__c,npo02__OppAmount2YearsAgo__c,npo02__OppAmountLastNDays__c,npo02__OppAmountLastYear__c,npo02__OppAmountThisYear__c,npo02__OppsClosed2YearsAgo__c,npo02__OppsClosedLastNDays__c,npo02__OppsClosedLastYear__c,npo02__OppsClosedThisYear__c,npo02__SYSTEM_CUSTOM_NAMING__c,npo02__SmallestAmount__c,npo02__TotalMembershipOppAmount__c,npo02__TotalOppAmount__c', f.FieldPath)}"
				value="{!hh[f]}" styleClass="sfField sfField-{!f.FieldPath}"/>
		</apex:repeat>

</apex:pageBlockSection>

</apex:pageBlock>

<div class="gwNotifications gwHidden"> </div>
<div class="gwControls">
<div class="gwSection-content">
	
	<input class="gwPreventUI btn gwControls-save" name="bottomSave" value="{!$Label.site.save}" type="submit" />
	<apex:commandButton styleClass="gwHidden" id="gwControls-StdSave" action="{!save}" value="{!$Label.site.save}" />
	<apex:commandButton rendered="{!hh.id != null}" styleClass="gwPreventUI" action="{!deleteHH}" value="{!$Label.Delete}" />
	<apex:commandButton styleClass="gwPreventUI" action="{!cancel}" value="{!$Label.site.cancel}" />
	
</div>
</div>
</apex:form>

</apex:page>